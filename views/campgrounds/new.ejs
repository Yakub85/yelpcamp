<%= layout('layout/boilerplate') %>
<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-lable" for="title">Title</label>
                    <input class="form-control" type="text" name="campground[title]" id="title" required>
                    <div class="valid-feedback">
                        Looks goods!
                    </div>
    
                </div>
                <div class="mb-3">
                    <label class="form-lable" for="location">Location</label>
                    <input class="form-control" type="text" name="campground[location]" id="location"  required>
                    <div class="valid-feedback">
                        Looks goods!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-lable" for="price">Campground Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="basic-addon1">$</span>
                        <input type="text" class="form-control"name="campground[price]" placeholder="0.00" id="price" aria-label="Username" aria-describedby="basic-addon1"required>
                        <div class="valid-feedback">
                            Looks goods!
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-lable" for="description">Description </label>
                    <textarea class="form-control" type="text" name="campground[description]" id="description" required></textarea>
                    <div class="valid-feedback">
                        Looks goods!
                    </div>
                </div>
                <div class="mb-3">
                    <div  class="form-file custom-file">
                        <input class="form-control" type="file" id="image" name="image" multiple>
                        <label class="form-file-label" for="image"></label>
                            <span class="form-file-text custom-file-label">Choosen image(s)...</span>
                        </label>
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Add Campground</button>
                </div>
        </form>
        <a href="/campgrounds">All Campground</a>
    </div>
</div>
